{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "portfolio-site",
  "public": true,
  "github": {
    "enabled": true
  },
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": "out",
  "framework": "nextjs",
  "installCommand": "npm ci",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD",
  "cleanUrls": true,
  "trailingSlash": false,
  
  "regions": ["iad1", "sfo1"],
  
  "functions": {
    "app/api/translate/route.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/portfolio/route.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/auth/route.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/contact/route.js": {
      "maxDuration": 15,
      "memory": 512
    }
  },
  
  "crons": [
    {
      "path": "/api/health",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/backup",
      "schedule": "0 2 * * *"
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin/$1"
    }
  ],
  
  "redirects": [
    {
      "source": "/admin",
      "destination": "/admin/dashboard",
      "permanent": false
    },
    {
      "source": "/learn/(.*)",
      "destination": "/tools/$1",
      "permanent": true
    },
    {
      "source": "/make/(.*)",
      "destination": "/writing/$1",
      "permanent": true
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Permissions-Policy",
          "value": "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=(), interest-cohort=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; connect-src 'self' https:; font-src 'self' data: https:; form-action 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none';"
        }
      ]
    },
    {
      "source": "/admin/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0, private"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/fonts/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, immutable, max-age=31536000"
        }
      ]
    },
    {
      "source": "/media/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|ico|svg|webp|avif|jpg|jpeg|png))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(html|xml|json))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        }
      ]
    }
  ],
  
  "env": {
    "NODE_VERSION": "18",
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  
  "build": {
    "env": {
      "NODE_VERSION": "18",
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1",
      "ENABLE_ANALYTICS": "true",
      "COMPRESSION_ENABLED": "true",
      "BUILD_MODE": "production"
    }
  },
  
  "typescript": {
    "ignoreBuildErrors": false
  },
  
  "devCommand": "npm run dev",
  "buildCommand": "npm run build",
  "outputDirectory": "out"
}