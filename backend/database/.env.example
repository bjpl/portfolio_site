# Portfolio Site Database Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
NODE_ENV=development
DATABASE_URL=postgresql://portfolio_user:portfolio_password@localhost:5432/portfolio_db
DATABASE_PROVIDER=postgresql

# Alternative database configurations:
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db

# For MySQL:
# DATABASE_URL=mysql://username:password@localhost:3306/portfolio_db

# For SQLite (development only):
# DATABASE_URL=file:./dev.db

# Database Connection Details (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=portfolio_password
DB_SCHEMA=public

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# SSL Configuration
DB_SSL_ENABLED=false
DB_SSL_REQUIRE=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# Logging Configuration
DB_LOGGING=true
DB_LOG_LEVEL=info
DB_SLOW_QUERY_THRESHOLD=1000
DB_FILE_LOGGING=true

# Performance Settings
DB_QUERY_TIMEOUT=30000
DB_TRANSACTION_TIMEOUT=60000
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=300000

# Feature Flags
ENABLE_AUDIT_LOGS=true
ENABLE_SOFT_DELETES=true
ENABLE_VERSIONING=true
ENABLE_FULLTEXT_SEARCH=false
ENABLE_JSON_COLUMNS=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=portfolio:

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_DAILY_RETENTION=7
BACKUP_WEEKLY_RETENTION=4
BACKUP_MONTHLY_RETENTION=12
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false
BACKUP_ENCRYPTION_KEY=

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Email Configuration
EMAIL_ENABLED=false
EMAIL_FROM_NAME=Portfolio Site
EMAIL_FROM_EMAIL=noreply@portfoliosite.com
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# API Configuration
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900
API_CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Analytics
GOOGLE_ANALYTICS_ID=
ANALYTICS_ENABLED=true
ANALYTICS_TRACK_PAGEVIEWS=true
ANALYTICS_TRACK_EVENTS=true

# Media Configuration
MEDIA_MAX_UPLOAD_SIZE=10485760
MEDIA_STORAGE_PROVIDER=local
MEDIA_STORAGE_PATH=../../../static/uploads

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Cloudinary Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Redis Configuration (for caching/sessions)
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Development/Testing Settings
SEED_SAMPLE_DATA=true
AUTO_MIGRATE=true
AUTO_SEED=true
DEBUG_SQL=false

# Production Settings
# Set these in production:
# NODE_ENV=production
# DATABASE_URL=your-production-database-url
# DB_SSL_ENABLED=true
# DB_SSL_REQUIRE=true
# BACKUP_ENABLED=true
# BACKUP_ENCRYPTION=true
# BACKUP_ENCRYPTION_KEY=your-encryption-key
# EMAIL_ENABLED=true
# (configure email settings)
# (configure OAuth settings)
# JWT_SECRET=your-production-jwt-secret