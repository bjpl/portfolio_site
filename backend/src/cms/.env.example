# Server Configuration
NODE_ENV=development
PORT=4000
HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_cms
DB_USER=cms_user
DB_PASS=cms_password
DB_DIALECT=sqlite
# For SQLite, specify the file path:
DB_STORAGE=./database.sqlite

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50000000
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,audio/mpeg,application/pdf

# CDN Configuration
CDN_ENABLED=false
CDN_BASE_URL=https://cdn.yoursite.com
CDN_API_KEY=
CDN_API_SECRET=

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET=your-bucket-name
AWS_REGION=us-east-1
S3_ENDPOINT=

# Cloudinary Configuration (if using Cloudinary)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yoursite.com
FROM_NAME=Portfolio CMS

# Site Configuration
SITE_URL=http://localhost:3000
SITE_NAME=Portfolio CMS
ADMIN_EMAIL=admin@yoursite.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:1313,http://127.0.0.1:3000

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_BLOG_CREATE_MAX=10
RATE_LIMIT_MEDIA_UPLOAD_MAX=50
RATE_LIMIT_COMMENT_MAX=5

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/cms.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cache Configuration
CACHE_TTL=3600
CACHE_REDIS_TTL=7200

# Media Optimization
IMAGE_QUALITY=85
IMAGE_RESIZE_ENABLED=true
IMAGE_WEBP_ENABLED=true
VIDEO_TRANSCODE_ENABLED=false

# Search Configuration
SEARCH_ENABLED=true
SEARCH_PROVIDER=internal
ELASTICSEARCH_URL=http://localhost:9200

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=
GOOGLE_SITE_VERIFICATION=

# Social Media Integration
TWITTER_API_KEY=
TWITTER_API_SECRET=
FACEBOOK_APP_ID=
INSTAGRAM_ACCESS_TOKEN=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
SENTRY_DSN=

# Feature Flags
FEATURE_COMMENTS_ENABLED=true
FEATURE_BLOG_VERSIONS_ENABLED=true
FEATURE_MEDIA_CDN_ENABLED=false
FEATURE_MULTILINGUAL_ENABLED=true
FEATURE_SEO_TOOLS_ENABLED=true
FEATURE_SOCIAL_SHARING_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=false

# Content Moderation
CONTENT_MODERATION_ENABLED=true
SPAM_DETECTION_ENABLED=true
AUTO_APPROVE_COMMENTS=false
CONTENT_SCANNING_ENABLED=false

# Development Configuration
DEBUG_SQL=false
HOT_RELOAD=true
MOCK_EMAIL=true
MOCK_CDN=true

# Testing Configuration
TEST_DB_NAME=portfolio_cms_test
TEST_DB_STORAGE=:memory:
TEST_UPLOADS_PATH=./test-uploads

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=The system is currently under maintenance. Please try again later.

# API Configuration
API_VERSION=v1
API_DOCS_ENABLED=true
API_RATE_LIMIT_ENABLED=true
CORS_ENABLED=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Third-party Integrations
GITHUB_WEBHOOK_SECRET=
NETLIFY_WEBHOOK_SECRET=
ZAPIER_WEBHOOK_URL=

# Performance Configuration
COMPRESSION_ENABLED=true
ETAG_ENABLED=true
CACHE_CONTROL_MAX_AGE=3600

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es
TIMEZONE=UTC