# Development Environment Configuration
NODE_ENV=development
PORT=3333
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_development
DB_USER=portfolio_dev
DB_PASSWORD=dev_password_123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=20000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DB=0
REDIS_TTL=600

# JWT Configuration
JWT_SECRET=development_jwt_secret_key_very_long_and_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=portfolio-backend-dev

# Session Configuration
SESSION_SECRET=development_session_secret_key_very_long
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:1313,http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain
UPLOAD_DESTINATION=./uploads
UPLOAD_STORAGE_TYPE=local

# Email Configuration (Development - use Ethereal/MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=dev@portfolio.local
SMTP_PASS=dev_password
FROM_EMAIL=noreply@portfolio.local
FROM_NAME=Portfolio Dev

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/application.log
LOG_ERROR_FILE=./logs/error.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_CONSOLE=true

# Rate Limiting (More relaxed for development)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Cache Configuration
CACHE_TTL=60
CACHE_MAX_SIZE=50
CACHE_CHECK_PERIOD=60

# Health Check Configuration
HEALTH_CHECK_INTERVAL=10000
HEALTH_CHECK_TIMEOUT=2000
HEALTH_CHECK_RETRIES=2

# External API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=2
API_RETRY_DELAY=500

# Development Features
HOT_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Feature Flags
FEATURE_WEBSOCKETS=true
FEATURE_REAL_TIME_SYNC=true
FEATURE_ANALYTICS=false
FEATURE_BACKUP=false

# SSL Configuration (Development)
SSL_ENABLED=false