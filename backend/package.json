{
  "name": "hugo-backend",
  "version": "1.0.0",
  "description": "Backend for Hugo Management Tools",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/simple-cms-server.js",
    "dev": "nodemon src/simple-cms-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:performance": "jest --testPathPattern=tests/performance --runInBand",
    "test:ci": "jest --coverage --ci --watchAll=false --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "db:reset": "npm run migrate:undo:all && npm run migrate && npm run seed",
    "db:test": "NODE_ENV=test npm run migrate && NODE_ENV=test npm run seed",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "build": "echo 'No build step required for Node.js backend'",
    "validate": "npm run lint && npm run test:ci && npm run security:audit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@sentry/node": "^7.86.0",
    "@sentry/profiling-node": "^10.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "diff": "^5.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "gray-matter": "^4.0.3",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.11",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.14",
    "babel-jest": "^30.0.5",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-serializer-path": "^0.1.15",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci"
    }
  },
  "jest": {
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "backend",
    "api",
    "portfolio",
    "cms",
    "hugo",
    "authentication",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio-backend/issues"
  },
  "homepage": "https://github.com/yourusername/portfolio-backend#readme"
}