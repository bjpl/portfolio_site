{
  "name": "portfolio-professional",
  "version": "2.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "hugo server --navigateToChanged --bind 0.0.0.0 --buildDrafts --disableFastRender",
    "build": "hugo --minify --gc && npm run build:search",
    "build:search": "hugo list all --format json > public/search-index.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "translate": "node tools/translator/cli.js",
    "translate:batch": "node tools/translator/cli.js batch -l es",
    "new:post": "hugo new content/make/words/new-post.md",
    "new:project": "hugo new content/learn/built/new-project.md",
    "perf:check": "node tools/performance/budget.js",
    "build:check": "npm run build && npm run perf:check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.9",
    "fuse.js": "^7.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy-img": "^6.0.4",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitest/ui": "^1.0.0",
    "axe-core": "^4.10.3",
    "chalk": "^5.5.0",
    "commander": "^11.1.0",
    "critical": "^7.2.1",
    "dotenv": "^16.6.1",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "happy-dom": "^12.10.3",
    "imagemin": "^9.0.1",
    "imagemin-webp": "^8.0.0",
    "intersection-observer": "^0.12.2",
    "mini-css-extract-plugin": "^2.9.4",
    "ora": "^8.2.0",
    "pa11y": "^9.0.0",
    "puppeteer": "^24.16.1",
    "sass": "^1.90.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
