{
  "name": "nextjs-portfolio-site",
  "version": "1.0.0",
  "description": "Modern Portfolio Site with Next.js Static Site Generation",
  "type": "module",
  "main": "next.config.mjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "build:static": "npm run clean && STATIC_EXPORT=true next build && node -e \"import('./lib/static-generator.js').then(m => m.postBuildOptimization())\"",
    "build:production": "npm run build:static",
    "build:analyze": "ANALYZE=true next build",
    "build:deploy": "npm run build:static && npm run optimize:assets",
    "clean": "rm -rf .next out build dist",
    "optimize:assets": "node -e \"import('./lib/static-generator.js').then(m => m.optimizeStaticAssets())\"",
    "generate:sitemap": "node -e \"import('./lib/static-generator.js').then(m => m.generateStaticFiles())\"",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs --selectProjects unit",
    "test:integration": "jest --config jest.config.cjs --selectProjects integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:ci": "jest --config jest.config.cjs --ci --coverage --watchAll=false",
    "test:accessibility": "pa11y-ci --sitemap http://localhost:3000/sitemap.xml",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "bundle:analyze": "node scripts/bundle-analyzer.js",
    "bundle:report": "npm run build && npm run bundle:analyze",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./bundle-analysis/lighthouse-report.html --chrome-flags=\"--headless\"",
    "perf:audit": "npm run build:static && npm run lighthouse && npm run bundle:analyze",
    "serve:static": "npx serve out -p 3000",
    "preview:static": "npm run build:static && npm run serve:static"
  },
  "keywords": [
    "nextjs",
    "portfolio",
    "static-site-generation",
    "supabase",
    "typescript",
    "tailwindcss"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.56.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.5",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "packageManager": "npm@10.0.0"
}