# Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3333
HOST=localhost

# Security - CRITICAL: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Admin User Credentials (CHANGE IN PRODUCTION)
ADMIN_USERNAME=your_admin_username
ADMIN_EMAIL=your_admin@email.com
ADMIN_PASSWORD_HASH=generate-using-bcrypt-library

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=your-database-password
DB_SSL=false

# MongoDB Alternative (if using MongoDB instead)
MONGODB_URI=mongodb://localhost:27017/portfolio_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Hugo Configuration
HUGO_ENVIRONMENT=development
HUGO_BASE_URL=http://localhost:1313

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,md,txt,csv

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN=http://localhost:1313,http://localhost:3000
CORS_CREDENTIALS=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourportfolio.com

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# Monitoring
SENTRY_DSN=your-sentry-dsn
APM_SERVICE_NAME=portfolio-site
APM_ENVIRONMENT=development

# CDN/Storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1
CLOUDINARY_URL=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=false
ENABLE_ANALYTICS=false
MAINTENANCE_MODE=false