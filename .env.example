# =============================================
# AUTHENTICATION & SECURITY
# =============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d
ENABLE_REGISTRATION=false

# Admin Configuration
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://your-site.netlify.app,https://www.your-site.netlify.app
ALLOWED_ORIGINS=http://localhost:1313,https://yourdomain.com

# =============================================
# EMAIL CONFIGURATION
# =============================================

# SMTP Settings (Primary)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@portfolio.com
FROM_EMAIL=your-email@gmail.com

# Contact Form Settings
CONTACT_EMAIL=contact@yourdomain.com
CONTACT_NOTIFICATION_EMAIL=notifications@yourdomain.com

# Alternative Email Services (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# =============================================
# ANALYTICS & TRACKING
# =============================================

# Google Analytics
GA_TRACKING_ID=
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
ENABLE_ANALYTICS=true

# =============================================
# FILE STORAGE & MEDIA
# =============================================

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# CDN Settings (Optional)
CDN_URL=https://cdn.example.com
ENABLE_CDN=false

# =============================================
# CACHING & PERFORMANCE
# =============================================

# Redis for caching (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================
# FEATURE FLAGS
# =============================================

ENABLE_BLOG=true
ENABLE_COMMENTS=false
ENABLE_CONTACT_FORM=true
ENABLE_SEARCH=true
ENABLE_MULTILINGUAL=true
ENABLE_WEBHOOKS=true
ENABLE_REALTIME=true
ENABLE_STORAGE=true
ENABLE_LOGGING=true

# =============================================
# DEVELOPMENT & DEBUGGING
# =============================================

# Debug Settings
DEBUG=true
LOG_LEVEL=info

# =============================================
# LEGACY SUPPORT (Optional)
# =============================================

# Database alternatives for migration
DATABASE_URL=postgresql://user:password@host:port/database
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/database

# =============================================
# NETLIFY SPECIFIC
# =============================================

# Content Security Policy
CSP_REPORT_URI=/api/csp-report