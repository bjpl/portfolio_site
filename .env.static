# Static Export Configuration
STATIC_EXPORT=true
NODE_ENV=production

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourportfolio.com
NEXT_PUBLIC_SITE_NAME=Portfolio
NEXT_PUBLIC_SITE_DESCRIPTION=Modern portfolio website showcasing projects and skills

# Custom Domain (for GitHub Pages or Netlify)
# CUSTOM_DOMAIN=yourportfolio.com

# Asset Configuration
ASSET_PREFIX=
BASE_PATH=

# Optimization Flags
ANALYZE=false
OPTIMIZE_IMAGES=true
GENERATE_SITEMAP=true

# PWA Configuration
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_OFFLINE_SUPPORT=true

# Analytics (if needed for static sites)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_VERCEL_ANALYTICS=false