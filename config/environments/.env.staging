# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3333
HOST=0.0.0.0
APP_NAME=Portfolio Site (Staging)
APP_VERSION=1.0.0-staging

# Database
DB_HOST=postgres-staging
DB_PORT=5432
DB_NAME=portfolio_db_staging
DB_USER=portfolio_user_staging
DB_PASSWORD=staging_password_123
DB_SSL=prefer
DB_POOL_MIN=1
DB_POOL_MAX=5

# Redis Cache
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_123
REDIS_DB=1
REDIS_TTL=1800

# Security (Use weaker settings for staging)
JWT_SECRET=staging_jwt_secret_key_123
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=staging_session_secret_123
CORS_ORIGIN=https://staging.portfolio.example.com

# Email/SMTP (Use test email service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=staging_smtp_user
SMTP_PASS=staging_smtp_pass
EMAIL_FROM=staging@portfolio.example.com

# Monitoring & Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
SENTRY_DSN=https://staging@sentry.io/project
NEW_RELIC_LICENSE_KEY=staging_newrelic_key

# File Storage
UPLOAD_MAX_SIZE=5MB
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf
STORAGE_TYPE=local
AWS_S3_BUCKET=portfolio-staging-uploads
AWS_ACCESS_KEY_ID=staging_aws_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=portfolio-staging-backups
BACKUP_ENCRYPTION_KEY=staging_backup_key

# Performance
CACHE_TTL=60
COMPRESSION_ENABLED=true
RATE_LIMIT_WINDOW=5m
RATE_LIMIT_MAX_REQUESTS=200

# Feature Flags
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=false
FEATURE_DARK_MODE=true
FEATURE_MULTILINGUAL=true

# External Services
GOOGLE_ANALYTICS_ID=GA-STAGING-123
CLOUDFLARE_API_TOKEN=staging_cf_token
WEBHOOK_SECRET=staging_webhook_secret

# Health Checks
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=15000